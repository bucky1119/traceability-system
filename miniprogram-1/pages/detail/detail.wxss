.container { padding: 20rpx; background: #f5f5f5; min-height: 100vh; }
.header { margin-bottom: 20rpx; }
.title { font-size: 36rpx; font-weight: 600; }
.loading { text-align: center; color: #888; padding: 40rpx 0; }
.content { display: flex; flex-direction: column; gap: 24rpx; }
.card { background: #fff; border-radius: 12rpx; padding: 24rpx; box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06); }
.card-header { display: flex; align-items: center; justify-content: space-between; margin-bottom: 16rpx; }
.card-title { font-size: 30rpx; font-weight: 600; }
.btn-link { background: transparent; color: #4f46e5; font-size: 28rpx; padding: 0 8rpx; border: none; }
.btn-link::after { display: none; }
.btn-link:active { opacity: 0.7; }
.row { display: flex; align-items: center; padding: 12rpx 0; }
.label { width: 140rpx; color: #666; font-size: 26rpx; }
.value { flex: 1; color: #333; font-size: 28rpx; }
.product-cover { margin-bottom: 16rpx; }
.cover-image { width: 100%; height: 360rpx; border-radius: 10rpx; }

/* 表单 */
.form { display: flex; flex-direction: column; gap: 16rpx; }
.form-item { display: flex; flex-direction: column; gap: 8rpx; }
.input { height: 80rpx; background: #f7f7f7; border-radius: 8rpx; padding: 0 20rpx; }
.textarea { min-height: 140rpx; background: #f7f7f7; border-radius: 8rpx; padding: 16rpx 20rpx; }
.picker { height: 80rpx; background: #f7f7f7; border-radius: 8rpx; display: flex; align-items: center; justify-content: space-between; padding: 0 20rpx; color: #333; }
.image-upload { }
.upload-area { height: 200rpx; border: 2rpx dashed #ddd; border-radius: 8rpx; display: flex; align-items: center; justify-content: center; flex-direction: column; color: #999; }
.upload-plus { font-size: 60rpx; line-height: 1; }
.upload-tip { font-size: 26rpx; }
.image-preview .preview { width: 100%; height: 260rpx; border-radius: 8rpx; }
.form-actions { display: flex; gap: 16rpx; margin-top: 8rpx; }
.btn-primary, .btn-secondary, .btn-danger, .btn-success { flex: 1; height: 80rpx; border-radius: 40rpx; display: flex; align-items: center; justify-content: center; }
.btn-primary { background: #667eea; color: #fff; }
.btn-success { background: linear-gradient(135deg, #2ecc71 0%, #27ae60 100%); color: #fff; }
.btn-secondary { background: #f0f0f0; color: #666; }
.btn-danger { background: #ff4d4f; color: #fff; }

/* 安检列表 */
.safety-item { padding: 20rpx; border-radius: 8rpx; background: #fafafa; margin-bottom: 12rpx; }
.safety-image { margin-top: 12rpx; }
.result-image { width: 100%; height: 300rpx; border-radius: 8rpx; }
.safety-actions { display: flex; gap: 12rpx; margin-top: 12rpx; }
.empty { text-align: center; color: #888; padding: 16rpx 0; }

/* 弹窗 */
.modal { position: fixed; left: 0; right: 0; top: 0; bottom: 0; background: rgba(0,0,0,0.35); display: flex; align-items: center; justify-content: center; z-index: 999; }
.modal-body { width: 92%; background: #fff; border-radius: 12rpx; padding: 24rpx; }
.modal-header { display: flex; align-items: center; justify-content: space-between; margin-bottom: 12rpx; font-size: 30rpx; font-weight: 600; }
.modal-close { font-size: 36rpx; color: #999; }

/* 二维码 */
.qrcode-list { display: flex; flex-direction: column; gap: 16rpx; }
.qrcode-item { display: flex; gap: 16rpx; background: #fafafa; border-radius: 8rpx; padding: 16rpx; }
.qrcode-left { width: 180rpx; height: 180rpx; display: flex; align-items: center; justify-content: center; background: #fff; border-radius: 8rpx; }
.qrcode-thumbnail { width: 160rpx; height: 160rpx; }
.qrcode-right { flex: 1; display: flex; flex-direction: column; }

/* 按钮优化 */
.btn-outline-primary { 
  background: #fff; color: #4f46e5; border: 2rpx solid #4f46e5; 
  border-radius: 32rpx; height: 64rpx; padding: 0 24rpx; 
  display: flex; align-items: center; justify-content: center;
}
.btn-outline-primary:active { background: #f5f5ff; }

.btn-mini { height: 56rpx; padding: 0 20rpx; border-radius: 28rpx; font-size: 24rpx; }
.btn-ghost { background: #fff; color: #555; border: 2rpx solid #e5e7eb; }
.btn-text-danger { background: transparent; color: #ff4d4f; border: none; padding: 0 8rpx; }
/* 产品详情页样式 */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx; /* 为底部导航留出空间 */
}

/* 产品头部 */
.product-header {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.product-image {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 15rpx;
  overflow: hidden;
  margin-right: 30rpx;
}

.product-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.product-status {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  padding: 6rpx 12rpx;
  border-radius: 15rpx;
  font-size: 22rpx;
  color: #fff;
}

.product-status.qualified {
  background: #4caf50;
}

.product-status.unqualified {
  background: #ff4757;
}

.product-info {
  flex: 1;
}

.product-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.product-batch {
  display: block;
  font-size: 28rpx;
  color: #667eea;
  margin-bottom: 10rpx;
}

.product-origin {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.product-producer {
  display: block;
  font-size: 26rpx;
  color: #666;
}

/* 详细信息区域 */
.detail-sections {
  padding: 0 20rpx;
}

.detail-section {
  background: #fff;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  padding: 25rpx 30rpx;
  background: #f8f9fa;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
}

.title-icon {
  margin-right: 15rpx;
  font-size: 36rpx;
}

.title-text {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

/* 信息网格 */
.info-grid {
  padding: 20rpx 30rpx;
}

.info-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  text-align: right;
  max-width: 60%;
}

.info-value.qualified {
  color: #4caf50;
  font-weight: bold;
}

.info-value.unqualified {
  color: #ff4757;
  font-weight: bold;
}

.info-link {
  color: #667eea;
  text-decoration: underline;
}

/* 生产者卡片 */
.producer-card {
  display: flex;
  align-items: center;
  padding: 30rpx;
}

.producer-avatar {
  margin-right: 25rpx;
}

.producer-avatar image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  border: 3rpx solid #667eea;
}

.producer-info {
  flex: 1;
}

.producer-name {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.producer-phone {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.producer-enterprise {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 二维码列表 */
.qrcode-list {
  padding: 20rpx 30rpx;
}

.qrcode-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.qrcode-item:last-child {
  border-bottom: none;
}

.qrcode-content {
  display: flex;
  align-items: center;
  flex: 1;
}

.qrcode-actions {
  display: flex;
  gap: 10rpx;
  margin-left: 20rpx;
}

.qrcode-action-btn {
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  border-radius: 8rpx;
  border: none;
  background: #fff;
  color: #333;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  min-width: 60rpx;
  height: 50rpx;
  line-height: 34rpx;
}

.qrcode-action-btn.download-btn {
  background: #007aff;
  color: #fff;
}

.qrcode-action-btn.save-btn {
  background: #34c759;
  color: #fff;
}

.qrcode-action-btn:active {
  opacity: 0.8;
}

.qrcode-thumbnail {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}

.qrcode-info {
  flex: 1;
}

.qrcode-id {
  display: block;
  font-size: 26rpx;
  color: #667eea;
  margin-bottom: 8rpx;
}

.qrcode-scans {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 6rpx;
}

.qrcode-time {
  display: block;
  font-size: 22rpx;
  color: #999;
}

/* 操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 120rpx; /* 为底部导航留出空间 */
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  gap: 20rpx;
}

.btn-secondary {
  flex: 1;
  height: 80rpx;
  background: #fff;
  color: #667eea;
  border: 2rpx solid #667eea;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.btn-primary {
  flex: 1;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.btn-danger {
  flex: 1;
  height: 80rpx;
  background: #ff4757;
  color: #fff;
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
}

/* 二维码弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: #fff;
  border-radius: 20rpx;
  margin: 40rpx;
  max-width: 600rpx;
  max-height: 80vh;
  overflow-y: auto;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.qrcode-container {
  text-align: center;
  padding: 30rpx;
}

.qrcode-image {
  width: 80vw;
  max-width: 600rpx;
  border-radius: 15rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 15rpx;
}

.qrcode-tip {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.qrcode-info {
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 10rpx;
  margin: 0 30rpx 30rpx;
}

.info-item {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .product-header {
    padding: 20rpx;
  }
  
  .product-image {
    width: 150rpx;
    height: 150rpx;
    margin-right: 20rpx;
  }
  
  .detail-sections {
    padding: 0 15rpx;
  }
  
  .modal-content {
    margin: 20rpx;
  }
  
  .qrcode-image {
    width: 90vw;
    max-width: 600rpx;
  }
}
