/* index.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 模拟数据测试状态 */
.mock-status {
  background-color: #e6f7ff;
  border: 1rpx solid #91d5ff;
  border-radius: 8rpx;
  padding: 16rpx;
  margin-bottom: 20rpx;
}

.mock-text {
  font-size: 24rpx;
  color: #1890ff;
  text-align: center;
  display: block;
}

/* 顶部搜索栏 */
.search-header {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-bar {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.search-btn {
  width: 120rpx;
  height: 80rpx;
  background-color: #667eea;
  color: white;
  border-radius: 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.scan-section {
  display: flex;
  justify-content: center;
}

.scan-btn {
  background-color: #52c41a;
  color: white;
  border-radius: 40rpx;
  padding: 20rpx 40rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.scan-icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

/* 筛选栏 */
.filter-bar {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.filter-item {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
}

.filter-label {
  font-size: 28rpx;
  color: #333;
  margin-right: 10rpx;
}

.filter-arrow {
  font-size: 24rpx;
  color: #999;
}

.sort-options {
  display: flex;
  gap: 20rpx;
}

.sort-item {
  font-size: 28rpx;
  color: #666;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  transition: all 0.3s;
}

.sort-item.active {
  color: #667eea;
  background-color: #f0f2ff;
}

/* 产品列表 */
.product-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.product-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  display: flex;
  gap: 20rpx;
}

.product-image {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.product-image image {
  width: 100%;
  height: 100%;
}

.product-status {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 20rpx;
  color: white;
}

.product-status.qualified {
  background-color: #52c41a;
}

.product-status.unqualified {
  background-color: #ff4d4f;
}

.product-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.product-batch {
  font-size: 26rpx;
  color: #666;
}

.product-origin {
  font-size: 26rpx;
  color: #666;
}

.product-producer {
  font-size: 26rpx;
  color: #666;
}

.product-date {
  font-size: 24rpx;
  color: #999;
}

.product-actions {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  justify-content: center;
}

.action-btn {
  width: 120rpx;
  height: 60rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.detail-btn {
  background-color: #667eea;
  color: white;
}

.trace-btn {
  background-color: #52c41a;
  color: white;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.empty-subtext {
  font-size: 26rpx;
  color: #ccc;
}

/* 加载状态 */
.loading-state {
  display: flex;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background-color: #fff;
  border-radius: 12rpx;
  width: 90%;
  max-height: 80%;
  overflow-y: auto;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #e8e8e8;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  cursor: pointer;
}

.trace-content {
  padding: 30rpx;
}

.trace-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.trace-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.info-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.scan-result {
  padding: 30rpx;
}

.result-success,
.result-error {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.result-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.result-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  width: 100%;
}

.result-message {
  font-size: 26rpx;
  color: #ff4d4f;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #e8e8e8;
}

.btn-primary,
.btn-secondary {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-primary {
  background-color: #667eea;
  color: white;
}

.btn-secondary {
  background-color: #f5f5f5;
  color: #666;
}
