.container { padding: 20rpx; background: #f5f5f5; min-height: 100vh; }
.header { background: #fff; padding: 30rpx; margin-bottom: 20rpx; border-radius: 10rpx; }
.title { font-size: 36rpx; font-weight: 700; color: #333; display: block; margin-bottom: 10rpx; }
.subtitle { font-size: 28rpx; color: #666; }
.section { background: #fff; padding: 30rpx; border-radius: 10rpx; }
.form-item { margin-bottom: 30rpx; }
.label { font-size: 28rpx; color: #333; margin-bottom: 10rpx; display: block; }
.input { width: 100%; height: 80rpx; border: 1rpx solid #ddd; border-radius: 8rpx; padding: 0 20rpx; font-size: 28rpx; box-sizing: border-box; }
.picker-item { width: 100%; height: 80rpx; border: 1rpx solid #ddd; border-radius: 8rpx; padding: 0 20rpx; display: flex; align-items: center; justify-content: space-between; box-sizing: border-box; }
.picker-label { font-size: 28rpx; color: #333; }
.picker-arrow { font-size: 24rpx; color: #999; }
.actions { padding: 30rpx; }
.btn-primary { width: 100%; height: 80rpx; background: #667eea; color: #fff; border: none; border-radius: 8rpx; font-size: 28rpx; }
