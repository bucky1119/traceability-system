/* farmerManagement.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.section {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.farmer-list {
  max-height: 400rpx;
  overflow-y: auto;
}

.farmer-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  margin-bottom: 15rpx;
  background: #fafafa;
}

.farmer-item.selected {
  background: #e6f3ff;
  border-color: #667eea;
}

.farmer-info {
  flex: 1;
}

.farmer-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 5rpx;
}

.farmer-enterprise {
  font-size: 26rpx;
  color: #666;
  display: block;
  margin-bottom: 5rpx;
}

.farmer-stats {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.farmer-actions {
  margin-left: 20rpx;
}

.btn-small {
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  background: #667eea;
  color: white;
  border: none;
  border-radius: 6rpx;
}

.product-list {
  max-height: 500rpx;
  overflow-y: auto;
}

.product-item {
  padding: 20rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  margin-bottom: 15rpx;
  background: #fafafa;
}

.product-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.product-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.product-origin {
  font-size: 26rpx;
  color: #666;
}

.product-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.product-status.qualified {
  background: #e8f5e8;
  color: #52c41a;
}

.product-status.unqualified {
  background: #fff2f0;
  color: #ff4d4f;
}

.product-dates {
  display: flex;
  gap: 20rpx;
}

.date-item {
  font-size: 24rpx;
  color: #999;
}

.empty-state {
  text-align: center;
  padding: 60rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.actions {
  padding: 30rpx;
}

.btn-secondary {
  width: 100%;
  height: 80rpx;
  background: #f5f5f5;
  color: #666;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
} 