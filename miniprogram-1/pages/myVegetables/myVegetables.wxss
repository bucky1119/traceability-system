/* 我的产品页面样式 */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx; /* 为底部导航留出空间 */
}

/* 页面头部 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  text-align: center;
  color: #fff;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  opacity: 0.9;
}

/* 统计卡片 */
.stats-card {
  background: #fff;
  margin: 20rpx;
  border-radius: 15rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.stats-item {
  text-align: center;
}

.stats-number {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 8rpx;
}

.stats-label {
  display: block;
  font-size: 24rpx;
  color: #666;
}

/* 搜索栏 */
.search-bar {
  background: #fff;
  margin: 20rpx;
  border-radius: 15rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.search-input-container {
  flex: 1;
  position: relative;
  display: flex;
  align-items: center;
}

.search-input {
  flex: 1;
  height: 70rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 35rpx;
  font-size: 28rpx;
  color: #333;
  background: #f8f9fa;
}

.clear-btn {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background: #ccc;
  color: #fff;
  border-radius: 50%;
  font-size: 24rpx;
  font-weight: bold;
}

.search-btn {
  background: #667eea;
  color: #fff;
  border: none;
  border-radius: 25rpx;
  padding: 15rpx 25rpx;
  font-size: 26rpx;
  margin-left: 15rpx;
}

/* 筛选栏 */
.filter-bar {
  background: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 15rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.filter-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #f8f9fa;
  border-radius: 25rpx;
  padding: 15rpx 25rpx;
}

.filter-label {
  font-size: 28rpx;
  color: #333;
}

.filter-arrow {
  font-size: 24rpx;
  color: #999;
}

/* 搜索结果提示 */
.search-result-tip {
  background: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 15rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.tip-text {
  font-size: 26rpx;
  color: #666;
}

.reset-btn {
  font-size: 26rpx;
  color: #667eea;
  padding: 10rpx 20rpx;
  border: 2rpx solid #667eea;
  border-radius: 20rpx;
}

/* 产品列表 */
.product-list {
  padding: 0 20rpx;
}

.product-item {
  background: #fff;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.product-image {
  position: relative;
  height: 250rpx;
  overflow: hidden;
}

.product-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.product-status {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #fff;
}

.product-status.qualified {
  background: #4caf50;
}

.product-status.unqualified {
  background: #ff4757;
}

.product-info {
  padding: 20rpx;
}

.product-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.product-batch {
  display: block;
  font-size: 26rpx;
  color: #667eea;
  margin-bottom: 8rpx;
}

.product-origin {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.product-date {
  display: block;
  font-size: 22rpx;
  color: #999;
}

.product-actions {
  display: flex;
  gap: 15rpx;
  padding: 0 20rpx 20rpx;
}

.action-btn {
  flex: 1;
  height: 60rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  border: none;
}

.edit-btn {
  background: #f8f9fa;
  color: #667eea;
}

.qrcode-btn {
  background: #667eea;
  color: #fff;
}

.delete-btn {
  background: #ff4757;
  color: #fff;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.empty-subtext {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 二维码弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  background: #fff;
  border-radius: 20rpx;
  margin: 40rpx;
  max-width: 600rpx;
  max-height: 80vh;
  overflow-y: auto;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.qrcode-container {
  text-align: center;
  padding: 30rpx;
}

.qrcode-image {
  width: 300rpx;
  height: 300rpx;
  border-radius: 15rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 15rpx;
}

.qrcode-tip {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.qrcode-info {
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 10rpx;
  margin: 0 30rpx 30rpx;
}

.info-item {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.modal-actions {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 1rpx solid #f0f0f0;
}

.btn-secondary {
  flex: 1;
  height: 70rpx;
  background: #f8f9fa;
  color: #667eea;
  border: 2rpx solid #667eea;
  border-radius: 35rpx;
  font-size: 28rpx;
}

.btn-primary {
  flex: 1;
  height: 70rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border: none;
  border-radius: 35rpx;
  font-size: 28rpx;
}

/* 浮动按钮 */
.fab {
  position: fixed;
  bottom: 140rpx; /* 为底部导航留出空间 */
  right: 30rpx;
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
  z-index: 100;
}

.fab-icon {
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .header {
    padding: 30rpx 20rpx;
  }
  
  .stats-card {
    margin: 15rpx;
    padding: 25rpx;
  }
  
  .search-bar,
  .filter-bar {
    margin: 15rpx;
  }
  
  .product-list {
    padding: 0 15rpx;
  }
  
  .modal-content {
    margin: 20rpx;
  }
  
  .qrcode-image {
    width: 250rpx;
    height: 250rpx;
  }
  
  .fab {
    right: 20rpx;
    bottom: 130rpx;
  }
}
