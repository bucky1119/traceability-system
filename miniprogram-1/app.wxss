/**app.wxss**/
/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  color: #333;
  line-height: 1.6;
}

/* 主题色彩 */
:root {
  --primary-color: #667eea;
  --primary-light: #7c8fff;
  --primary-dark: #5a6fd8;
  --success-color: #52c41a;
  --warning-color: #faad14;
  --error-color: #ff4d4f;
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-disabled: #999999;
  --border-color: #e8e8e8;
  --background-color: #f5f5f5;
  --card-background: #ffffff;
}

/* 通用容器 */
.container {
  padding: 20rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 卡片样式 */
.card {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 按钮样式 */
.btn {
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 20rpx 32rpx;
  border: none;
  text-align: center;
  transition: all 0.3s ease;
}

.btn-primary {
  background: var(--primary-color);
  color: #fff;
}

.btn-primary:active {
  background: var(--primary-dark);
}

.btn-secondary {
  background: #f0f0f0;
  color: var(--text-primary);
}

.btn-secondary:active {
  background: #e0e0e0;
}

.btn-success {
  background: var(--success-color);
  color: #fff;
}

.btn-warning {
  background: var(--warning-color);
  color: #fff;
}

.btn-error {
  background: var(--error-color);
  color: #fff;
}

/* 输入框样式 */
.input {
  border: 2rpx solid var(--border-color);
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background: #fff;
  width: 100%;
  box-sizing: border-box;
}

.input:focus {
  border-color: var(--primary-color);
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
}

.tag-success {
  background: #f6ffed;
  color: var(--success-color);
  border: 1rpx solid #b7eb8f;
}

.tag-warning {
  background: #fffbe6;
  color: var(--warning-color);
  border: 1rpx solid #ffe58f;
}

.tag-error {
  background: #fff2f0;
  color: var(--error-color);
  border: 1rpx solid #ffccc7;
}

/* 文本样式 */
.text-primary {
  color: var(--text-primary);
}

.text-secondary {
  color: var(--text-secondary);
}

.text-disabled {
  color: var(--text-disabled);
}

.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

/* 布局样式 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  justify-content: center;
  align-items: center;
}

.flex-between {
  justify-content: space-between;
}

.flex-around {
  justify-content: space-around;
}

.flex-1 {
  flex: 1;
}

/* 间距样式 */
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }
.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }
.ml-10 { margin-left: 10rpx; }
.ml-20 { margin-left: 20rpx; }
.mr-10 { margin-right: 10rpx; }
.mr-20 { margin-right: 20rpx; }

.pt-10 { padding-top: 10rpx; }
.pt-20 { padding-top: 20rpx; }
.pb-10 { padding-bottom: 10rpx; }
.pb-20 { padding-bottom: 20rpx; }
.pl-10 { padding-left: 10rpx; }
.pl-20 { padding-left: 20rpx; }
.pr-10 { padding-right: 10rpx; }
.pr-20 { padding-right: 20rpx; }

/* 字体大小 */
.font-sm { font-size: 24rpx; }
.font-md { font-size: 28rpx; }
.font-lg { font-size: 32rpx; }
.font-xl { font-size: 36rpx; }
.font-xxl { font-size: 40rpx; }

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: var(--text-secondary);
}

.loading-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 80rpx 40rpx;
  color: var(--text-secondary);
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background: var(--border-color);
  margin: 20rpx 0;
}

/* 图片样式 */
.image {
  width: 100%;
  height: auto;
  border-radius: 8rpx;
}

.image-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.image-product {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  object-fit: cover;
}

/* 状态样式 */
.status {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
}

.status-success {
  background: #f6ffed;
  color: var(--success-color);
}

.status-warning {
  background: #fffbe6;
  color: var(--warning-color);
}

.status-error {
  background: #fff2f0;
  color: var(--error-color);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 16rpx;
  }
  
  .card {
    padding: 20rpx;
  }
  
  .btn {
    padding: 16rpx 24rpx;
    font-size: 26rpx;
  }
} 
